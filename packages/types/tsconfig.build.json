{
  "extends": "../../tsconfig.build.json",

  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./lib/cjs",
    "paths": {
    "@kiltprotocol/types/*": ["src/*"],
    "@polkadot/api/augment": ["src/chainTypes/augment-api.ts"],
    "@polkadot/types/augment": ["src/chainTypes/augment-types.ts"]
    },
  },

  "include": [
    "src/**/*.ts", "src/**/*.js"
  ],

  "exclude": [
    "coverage",
    "**/*.spec.ts",
    "**/definitions.ts"
  ]
}
