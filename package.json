{
  "name": "@kiltprotocol/prototype-sdk",
  "version": "0.2.1",
  "description": "",
  "main": "./build/index.js",
  "typings": "./build/index.d.ts",
  "scripts": {
    "_comment": "NODE_ENV=custom is set because otherwise tests won't compile (see https://github.com/polkadot-js/common/issues/321)",
    "test": "export NODE_ENV=custom; jest --coverage",
    "testCI": "export NODE_ENV=custom; jest --ci --coverage",
    "testWatch": "jest --watch --coverage",
    "lint": "tslint --project tsconfig.json --config tslint.json src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "style": "prettier -l src/**/*.ts",
    "style:fix": "yarn style --write",
    "build": "tsc --declaration",
    "build:docs": "typedoc --theme default --out docs",
    "buildAndPublish": "yarn build && node ./npm-create-rc.js && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn style",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KILTprotocol/prototype-sdk.git"
  },
  "engines": {
    "node": ">=10.0"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KILTprotocol/prototype-sdk/issues"
  },
  "homepage": "https://github.com/KILTprotocol/prototype-sdk#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.9",
    "@types/uuid": "^3.4.4",
    "eslint-plugin-tsc": "^1.2.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "npm-registry-client": "^8.6.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.4",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.13.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@polkadot/api": "^0.43.14",
    "ajv": "^6.6.1",
    "lodash": "^4.17.11",
    "typescript-logging": "^0.6.3",
    "uuid": "^3.3.2"
  },
  "peerDependencies": {
    "tweetnacl": "^1.0.0"
  }
}
